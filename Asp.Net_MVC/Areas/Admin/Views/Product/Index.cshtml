@using System.Security.Cryptography
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<Movie_Models.Product>

<div class="card shadow border-0 mt-3">
    <div class="card-header bg-secondary bg-gradient py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <div class="row pb-2">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Product" asp-action="UpSert" class="btn btn-primary">
                    <i class="bi bi-plus-square-dotted"></i>  Create New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped text-center">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Actors</th>
                    <th>Place</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Title</td>
                        <td>@obj.ListPrice</td>
                        <td>@obj.Actors</td>
                        <td>@obj.Price</td>
                        <td>@obj.Category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="UpSert" asp-route-id="@obj.ProductId" class="btn btn-secondary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.ProductId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
