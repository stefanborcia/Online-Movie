
@model Product
 
<div class="card shadow border-0 mt-3">
    <div class="card-header bg-secondary bg-gradient py-1">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="ProductId" hidden/>
            <div class="border p-3 mt-4">
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" disabled class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Actors" disabled class="form-control border-0 shadow" />
                    <label asp-for="Actors" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Price3" disabled class="form-control border-0 shadow" />
                    <label asp-for="Price3" class="ms-1 mt-1"></label>
                </div>
                <div class="form-floating disabled py-2 col-12">
                    <input asp-for="Price5" class="form-control border-0 shadow" />
                    <label asp-for="Price5" class="ms-1 mt-1"></label>
                </div>
                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">Back To List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>
