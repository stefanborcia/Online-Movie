@model int

<div class="container row pt-2">
    <div class="col-12 text-center">
        <h1 class="text-primary text-center">Payment Successful </h1>
        Order Number is: @Model <br /> <br />
        <img src="~/images/order.jpg" width="40%" />
    </div>
    <div class="col-12 text-center text-warning">
        <br /> Payment has been applied successfully! <br />
       <br/> <a asp-area="Admin" asp-controller="Order" asp-action="Details" asp-route-orderId="@Model" class="btn btn-primary">Back To Order Details</a>
    </div>
</div>